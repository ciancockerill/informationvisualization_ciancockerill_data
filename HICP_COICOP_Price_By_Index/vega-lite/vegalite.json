{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "data": {
    "url": "https://raw.githubusercontent.com/ciancockerill/informationvisualization_ciancockerill_data/refs/heads/main/data/cleaned/hicp.csv",
    "format": {"type": "csv"}
  },

  "params": [
    {
      "name": "yearSelection",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2024,
        "step": 1
      }
    },

    {
      "name": "commoditySel",
      "select": {
        "type": "point",
        "fields": ["CommodityCode"]     
      },
      "value": [{"CommodityCode": "00"}]
    }
  ],

  "vconcat": [

    {
      "hconcat": [

        {
          "title": "Main Sections (Bar Chart)",
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "CommodityName",
              "type": "nominal",
              "sort": "-x"
            },
            "x": {
              "field": "VALUE",
              "type": "quantitative",
              "scale": {"domain": [0, 240]}
            },
            "color": {
              "field": "CommodityName",
              "type": "nominal"
            },

            "opacity": {
              "condition": {
                "param": "commoditySel",
                "value": 1
              },
              "value": 0.3
            }
          },
          "transform": [
            {"filter": "datum.Year == yearSelection"},
            {"filter": "datum.IsMainCommodity == 1"}
          ]
        },

        {
          "title": "Subsections (Radial Chart)",
          "mark": {"type": "arc", "innerRadius": 40},
          "encoding": {
            "theta": {
              "field": "VALUE_PLACEHOLDER",
              "type": "quantitative"
            },
            "color": {
              "field": "SUBCATEGORY_PLACEHOLDER",
              "type": "nominal"
            }
          }
        }
      ]
    },

    {
      "title": "Main Sections Over Time (Line Chart)",
      "mark": "line",
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"field": "VALUE", "type": "quantitative"},
        "color": {"field": "CommodityName", "type": "nominal"}
      },
      "transform": [
        {"filter": {"param": "commoditySel", "field": "ParentCommodity"}}
      ]
    }
  ]
}
